# HeyQ Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your test credentials
# This file stays local and is never committed to version control

# =============================================================================
# TEST WEBSITE CREDENTIALS
# Use dummy/test accounts - never use real personal credentials
# =============================================================================

# SauceDemo (demo site - these are public test credentials)
saucedemo_username: "standard_user"
saucedemo_password: "secret_sauce"

# Flipkart (use test account - required for live testing)
flipkart_username: "testuser@example.com"  # Replace with test email
flipkart_password: "TestPass123!"          # Replace with test password

# Amazon (use test account - optional)
amazon_username: "testuser@example.com"    # Replace with test email  
amazon_password: "TestPass123!"            # Replace with test password

# =============================================================================
# TEST PAYMENT INFORMATION
# Use test card numbers only - never real payment info
# =============================================================================

# Test Credit Card (Visa test number - safe to use)
card_number: "4111111111111111"             # Visa test card
card_name: "Test User"                      # Test cardholder name
card_exp: "12/30"                          # Future expiry date
card_cvv: "123"                            # Test CVV

# Alternative test cards (uncomment as needed)
# card_number: "5555555555554444"           # Mastercard test card
# card_number: "378282246310005"            # American Express test card

# =============================================================================
# API KEYS (OPTIONAL)
# These enable advanced LLM features but are not required
# =============================================================================

# OpenAI API (for advanced NLP and voice processing)
# Get your key from: https://platform.openai.com/api-keys
openai_api_key: ""                         # Optional: "sk-your-key-here"

# Anthropic API (for Claude AI integration)  
# Get your key from: https://console.anthropic.com/
anthropic_api_key: ""                      # Optional: "sk-ant-your-key"

# =============================================================================
# VOICE & STT CONFIGURATION (OPTIONAL)
# =============================================================================

# Google Speech-to-Text (fallback STT engine)
# Most features work without this using Web Speech API
google_stt_api_key: ""                     # Optional: for enhanced STT

# =============================================================================
# ADVANCED CONFIGURATION (OPTIONAL)
# =============================================================================

# Custom browser settings
browser_timeout: 30000                     # Page load timeout in ms
slow_motion: 1000                          # Slow motion delay in ms (for debugging)
headless: false                            # Show browser by default

# Voice recognition settings
wake_word_confidence: 0.8                  # Wake word detection sensitivity
voice_timeout: 10                          # Voice command timeout in seconds

# Security settings
log_level: "INFO"                          # DEBUG, INFO, WARNING, ERROR
audit_enabled: true                        # Enable security audit logging
redact_secrets: true                       # Automatically redact secrets in logs

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. Copy this file: cp secrets.yaml.template secrets.yaml
# 2. Edit secrets.yaml with your test credentials
# 3. Never commit secrets.yaml to version control
# 4. For SauceDemo: Use the provided test credentials
# 5. For Flipkart/Amazon: Create test accounts with dummy data
# 6. For payment: Only use test card numbers provided above
# 7. API keys are optional but enable advanced features
#
# =============================================================================
